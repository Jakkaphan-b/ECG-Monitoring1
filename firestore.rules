rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Care team rules - users can only access their own care team
    match /care_team/{teamId} {
      allow read, write: if request.auth != null && 
                         request.auth.uid == resource.data.patient_id;
      allow create: if request.auth != null && 
                   request.auth.uid == request.resource.data.patient_id;
    }
    
    // ECG data rules - users can only access their own data
    match /ecg_data/{dataId} {
      allow read, write: if request.auth != null && 
                         request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
                   request.auth.uid == request.resource.data.userId;
    }
    
    // Alerts rules - users can only access their own alerts
    match /alerts/{alertId} {
      allow read, write: if request.auth != null && 
                         request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
                   request.auth.uid == request.resource.data.userId;
    }
    
    // Temporary rule for testing - ENABLE FOR DEBUGGING
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}